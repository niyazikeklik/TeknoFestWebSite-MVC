@using VizeWeb.DatabaseContext2
@using VizeWeb.business
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var takimlar = new DatabaseContext().GetAllTeam();
}
<div style="text-align:center">
    <h3 id="h3">Takım Oluştur</h3>
</div>
<div style="margin-right:100px;">
    <div style="margin-left: 100px;">
        <form class="g-3 needs-validation" asp-controller="Home" asp-action="AddBasvuru">
            <div class="row">
                <div class="col">
                    <label style="font-weight:700;" for="validationCustom02" class="form-label">Takımınızı Seçin:</label>
                    <select name="Model" class="form-control" id="takimUyeSayisi">
                        @for (var i = 0; i < takimlar.Count; i++)
                        {
                            <option>@takimlar[i].Name - @takimlar[i].TakimdId</option>
                        }
                    </select>
                </div>
            </div>
            <td>
                <input style="margin-top: 50px;" id="takimolusturbtn" type="submit" name="buton" value="Başvur" class="btn btn-info mx-auto col">
            </td>
        </form>

    </div>
</div>