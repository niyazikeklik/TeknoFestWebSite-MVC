@{

}
<div style="text-align:center">
    <h3 id="h3">Üyelik Formu</h3>
</div>
<div style="margin-right:100px;">
    <div style="margin-left: 100px;">
        <form class="g-3 needs-validation" asp-controller="Home" asp-action="SignUp" method="get">
            <div class="row">
                <div class="col">

                    <label style="font-weight:700;" for="validationCustom01" class="form-label">İsminiz</label>
                    <input name="UyeAdi" type="text" class="form-control" id="validationCustom01" placeholder="İsim" required>
                    <div class="valid-feedback">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label style="font-weight:700;" for="validationCustom02" class="form-label">Okul Numaranız</label>
                    <input name="UyeOkulNo" type="text" class="form-control" id="validationCustom02" placeholder="Okul No" required>
                    <div class="valid-feedback">
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label style="font-weight:700;" for="validationCustom03" class="form-label">Telefon Numaranız</label>
                    <input name="UyeTelNo" type="text" class="form-control" id="validationCustom03" placeholder="05*********" required>
                    <div class="invalid-feedback">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label style="font-weight:700;" for="exampleFormControlSelect1">Alanınız</label>
                    <select class="form-control" name="UyeAlan" id="exampleFormControlSelect1" required>
                        @foreach (var item in Enum.GetNames(typeof(Alanlar)).ToList())
                        {
                            <option>@item</option>
                        }
                    </select>
                    <div class="invalid-feedback">
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col">
                    <label style="font-weight:700;" for="validationCustom03" class="form-label">Mail Adresiniz</label>
                    <input name="UyeMail" type="text" class="form-control" id="validationCustom03" placeholder="email@example.com" required>
                    <div class="invalid-feedback">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label style="font-weight:700;" for="validationCustom03" class="form-label">Doğum Tarihinizi Yazınız</label>
                    <input name="UyeDogumTarihi" type="date" class="form-control" id="validationCustom03" placeholder="gün/ay/yıl" required>
                    <div class="invalid-feedback">
                    </div>
                </div>
            </div>
            <td>
                <input style="margin-top: 50px;" type="submit" name="buton" value="Üye Ol" class="btn btn-info mx-auto col">
            </td>
        </form>

    </div>
</div>
<script src="app.js"></script>
